<div class="row">
  <div class="col-12 text-center">
    <i class="fas fa-question-circle fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">お問い合わせ(確認)</h2>
    <%= form_with model: @inquiry, url: inquiry_thanks_path, local: true do |f| %>
      <table class="table">
        <tr>
          <th>名前</th>
          <td>
            <%= f.hidden_field :name %>
            <%= @inquiry.name %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= f.hidden_field :email %>
            <%= @inquiry.email %>
          </td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td>
            <%= f.hidden_field :message %>
            <%= simple_format(@inquiry.message) %>
          </td>
        </tr>
      </table>
      <%= f.submit '送信', :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>
